{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["github>nikobockerman/renovate-config"],
  semanticCommits: "enabled",
  packageRules: [
    {
      description: "Commit scope to trigger releases for shared workflows",
      matchFileNames: [".github/workflows/**"],
      // Disabled for packages that are not used by shared workflows
      matchPackageNames: ["!actions/setup-node"],
      semanticCommitScope: "shared-workflows",
    },
  ],
}
